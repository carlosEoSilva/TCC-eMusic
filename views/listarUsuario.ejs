<body>
    <h1>Lista de usu√°rios</h1>

    <% lista.forEach(function(i){ %>

      <form  action="/alterarUsuario" name="formId" method="post">
        <div class="form-row">

          <div class="col-3">
            <input type="text" class="form-control" placeholder="nome" value="<%= i.nome %>" readonly>
          </div>  

          <div class="col">
            <input type="text" class="form-control" placeholder="email" value="<%= i.email %>" readonly>
          </div>

          <div class="col-2">
            <input type="text" class="form-control" placeholder="cep" value="<%= i.cep %>" readonly>
          </div>

          <div class="col-1">
            <input type="text" class="form-control" placeholder="UF" value="<%= i.uf %>" readonly>
          </div>

          <div class="col">
            <input type="text" class="form-control" placeholder="rua" value="<%= i.rua %>" readonly>
          </div>

        </div>

        <div class="form-row">

          <div class="col-1">
            <input type="text" class="form-control" placeholder="numero" value="<%= i.numero %>" readonly>
          </div>  

          <div class="col">
            <input type="text" class="form-control" placeholder="cidade" value="<%= i.cidade %>" readonly>
          </div>

          <div class="col">
            <input type="text" class="form-control" placeholder="bairro" value="<%= i.bairro %>" readonly>
          </div>

          <div class="col">
            <input type="text" class="form-control" placeholder="complemento" value="<%= i.complemento %>" readonly>
          </div>

          <div class="col">
            <input type="text" class="form-control" placeholder="tipo end." value="<%= i.tipoEndereco %>" readonly>
          </div>

          <!-- <button type="submit" class="btn btn-warning"><a href="/cadastroUsuario">Alterar</a></button> -->

          <button type="submit" class="btn btn-warning" value="<%= i._id %>" name="idUs">Alterar</button>

          <button type="button" class="btn btn-danger" >Excluir</button>

        </div>
    </form>

    <% }) %>

    

      <button type="button" class="btn btn-success"><a href="/admin">Voltar</a></button>
</body>