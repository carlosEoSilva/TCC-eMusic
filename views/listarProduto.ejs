    <title>e-Music</title>
</head>

<body>
    <h1>Lista de produtos</h1>

    <form>
        <% album.forEach(function(i){ %>

        
        <div class="form-row">

          <div class="col">
            <input type="text" class="form-control" placeholder="type" value="<%= i.type %>" readonly>
          </div>  

          <div class="col">
            <input type="text" class="form-control" placeholder="artist" value="<%= i.artist %>" readonly>
          </div>

          <div class="col">
            <input type="text" class="form-control" placeholder="album" value="<%= i.name %>" readonly>
          </div>

          <div class="col">
            <input type="text" class="form-control" placeholder="price" value="<%= i.price %>" readonly>
          </div>

          <div class="col">
            <input type="text" class="form-control" placeholder="stock" value="99" readonly>
          </div>

          <button type="button" class="btn btn-warning">Alterar</button>

          <button type="button" class="btn btn-danger">Excluir</button>

        </div>
        
      
     <% }) %>
    </form>
      <button type="button" class="btn btn-success"><a href="/admin">Voltar</a></button>
</body>